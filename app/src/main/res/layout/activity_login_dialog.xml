<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="382"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="69">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:gravity="center"
            android:text="로그인"
            android:textColor="#5c5c5c"
            android:textSize="20sp"></TextView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="313"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="313">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="56"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="360">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="320">

                    <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
                        android:id="@+id/naver_OAuthlogin_btn_activity_login_dialog"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_margin="5dp"
                        android:visibility="gone"></com.nhn.android.naverlogin.ui.view.OAuthLoginButton>

                    <Button
                        android:id="@+id/naver_login_btn_activity_login_dialog"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/radius_naver"
                        android:drawableLeft="@drawable/naver_size"
                        android:drawablePadding="-63dp"
                        android:fontFamily="@font/notosanscjkkr_medium_regular"
                        android:gravity="center"
                        android:paddingLeft="7dp"
                        android:text="네이버 계정으로 로그인"
                        android:textSize="18sp"></Button>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="56"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="360">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="320">
                <com.kakao.usermgmt.LoginButton
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:visibility="gone">
                </com.kakao.usermgmt.LoginButton>
                    <Button
                        android:id="@+id/kakao_login_btn_activity_login_dialog"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/radius_kakao"
                        android:drawableLeft="@drawable/kakao_size"
                        android:drawablePadding="-63dp"
                        android:fontFamily="@font/notosanscjkkr_medium_regular"
                        android:gravity="center"
                        android:paddingLeft="7dp"
                        android:text="카카오톡 계정으로 로그인"
                        android:textColor="#3b1e1e"
                        android:textSize="18sp"></Button>

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="56"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="360">

                <Button
                    android:id="@+id/email_login_btn_activity_login_dialog"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="320"
                    android:background="@drawable/radius_mail"
                    android:drawableLeft="@drawable/mail_size"
                    android:drawablePadding="-63dp"
                    android:fontFamily="@font/notosanscjkkr_medium_regular"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:text="이메일 계정으로 로그인"
                    android:textColor="#626262"
                    android:textSize="18sp"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="360">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notosanscjkkr_medium_regular"
                    android:includeFontPadding="false"
                    android:text="회원가입시 약관에 동의 합니다. "
                    android:textColor="#666666"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/yk_text_view1_activity_login_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notosanscjkkr_medium_regular"
                    android:includeFontPadding="false"
                    android:textColor="#666666"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notosanscjkkr_medium_regular"
                    android:includeFontPadding="false"
                    android:text="\u007C "
                    android:textColor="#666666"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/yk_text_view2_activity_login_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notosanscjkkr_medium_regular"
                    android:includeFontPadding="false"
                    android:textColor="#666666"
                    android:textSize="10sp"></TextView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
