<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Home.HomeActivity.SymptomActivitys.BreathRecordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_breath_record_back"
            android:layout_width="0dp"
            android:layout_weight="120"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/back_btn_image"
            android:gravity="left|center_vertical"
            android:text="Back"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"
            android:textColor="#343434"
            android:textSize="18sp"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="120"
            android:gravity="center"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"
            android:text="폐기능"
            android:textColor="#343434"
            android:textSize="18sp"></TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="120"
            android:gravity="center_vertical|right">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/trash"
                android:id="@+id/img_breath_record_remove"
                android:layout_marginRight="16dp"></ImageView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f5f5f5"
        android:orientation="horizontal"
        android:weightSum="360">

        <TextView
            android:id="@+id/txt_breath_record_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="test"
            android:textColor="#000000"
            android:textSize="14sp"></TextView>

        <TextView
            android:id="@+id/txt_breath_record_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center_vertical|right"
            android:includeFontPadding="false"
            android:text="test"
            android:textColor="#000000"
            android:textSize="14sp"></TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="측정값"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_breath_record_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21dp"
                    android:textColor="@color/colorPrimary"
                    android:hint="측정 값을 입력하세요."
                    android:inputType="number"
                    android:textColorHint="@color/acacac"
                    android:background="@null"/>

                <ImageView
                    android:id="@+id/img_breath_record_edit_close"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit_close"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_breath_record_value_bottom"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/acacac"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="복약여부(선택)"
                android:textColor="@color/black"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정확한 결과를 위해 아침에는 어떠한 약도\n투여하지 않은 상태에서 측정하는 것을 권장합니다."
                android:textColor="@color/acacac"
                android:fontFamily="@font/notosanscjkkr_medium_regular"
                android:textSize="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/chb_breath_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/custom_check_box_1"
                    android:text="흡입제 사용 후에 측정했어요."
                    android:textColor="@color/black"
                    android:paddingLeft="12dp"
                    android:textSize="16dp"/>

                <LinearLayout
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="119dp"/>

            <LinearLayout
                android:id="@+id/lin_breath_record_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_question_mark"/>

                <LinearLayout
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="@string/question_text"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/e7e7e7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_breath_record_finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/radius_4dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="완료"
            android:textColor="@color/white"
            android:textSize="18dp"></Button>

    </LinearLayout>
</LinearLayout>