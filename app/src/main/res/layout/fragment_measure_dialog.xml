<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:weightSum="209"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="69"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="측정"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="@font/notosanscjkkr_bold"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="56"
        android:gravity="center"
        android:layout_marginBottom="12dp">
        <Button
            android:id="@+id/asthma_control_button_fragment_measure_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/measure_button_background"
            android:text="천식조절검사"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="56"
        android:gravity="center"
        android:layout_marginBottom="16dp">
        <Button
            android:id="@+id/dust_button_fragment_measure_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/measure_button_background"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:text="미세먼지"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="@font/notosanscjkkr_medium"></Button>
    </LinearLayout>

</LinearLayout>
