<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="672"
    tools:context=".MyPage.Activity.AccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="horizontal"
        android:weightSum="360">

        <TextView
            android:id="@+id/back_text_view_activity_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="120"
            android:drawableLeft="@drawable/back_btn_image"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:gravity="left|center_vertical"
            android:text="Back"
            android:textColor="#343434"
            android:textSize="18sp"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="120"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="계정"
            android:textColor="#343434"
            android:textSize="18sp"></TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="120"
            android:gravity="right">

            <TextView
                android:id="@+id/save_text_view_activity_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:gravity="center_vertical|right"
                android:includeFontPadding="false"
                android:text="저장"
                android:textColor="#343434"
                android:textSize="18sp"></TextView>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="622"
        android:overScrollMode="never"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15.5dp"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:weightSum="360">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="140"></LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/user_icon"
                            android:id="@+id/account_imageview_profile">

                        </ImageView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/camera_icon"
                            android:layout_gravity="right|bottom"
                            android:id="@+id/account_imageview_profile_camera"></ImageView>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginBottom="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="아이디(이메일)"
                    android:textColor="#343434"
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="21sp"
                    android:textColor="#343434"
                    android:text=""
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:layout_marginLeft="20dp"
                    android:includeFontPadding="false"
                    android:id="@+id/name_text_view_activity_account"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/pass_container_activity_account">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="비밀번호"
                        android:textColor="#acacac"
                        android:textSize="12sp"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="1dp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="21sp"
                        android:textColor="#343434"
                        android:hint="비밀번호를 설정해 주세요."
                        android:textColorHint="#acacac"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:theme="@style/EditTheme"
                        android:inputType="textPassword"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:singleLine="true"
                        android:id="@+id/pass_edit_text_activity_account"></EditText>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginBottom="1dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#acacac"
                    android:text="닉네임"
                    android:textSize="12sp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"></TextView>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="360">

                <EditText
                    android:id="@+id/nickname_edit_activity_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/notosanscjkkr_medium_regular"
                    android:hint="닉네임을 입력해주세요."
                    android:includeFontPadding="false"
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:textColor="#343434"
                    android:textColorHint="#acacac"
                    android:textSize="21sp"
                    android:theme="@style/EditTheme"></EditText>

                <TextView
                    android:id="@+id/edit_text_count_text_view_activity_account"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/edit_text_count_max_text_view_activity_account"
                    android:fontFamily="@font/notosanscjkkr_medium_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="#343434"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:id="@+id/edit_text_count_max_text_view_activity_account"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@+id/nickname_edit_activity_account"
                    android:fontFamily="@font/notosanscjkkr_medium_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="/8"
                    android:textColor="#343434"
                    android:textSize="15sp"></TextView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginBottom="1dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#acacac"
                    android:text="전화번호(선택)"
                    android:textSize="12sp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="21sp"
                    android:textColor="#343434"
                    android:hint="-없이 숫자만"
                    android:textColorHint="#acacac"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:theme="@style/EditTheme"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:singleLine="true"
                    android:id="@+id/phone_num_edit_text_activity_account"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginBottom="1dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#acacac"
                    android:text="연동계정"
                    android:textSize="12sp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="21sp"
                    android:textColor="#343434"
                    android:gravity="center_vertical"
                    android:text="네이버"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:id="@+id/account_info_text_view_activity_account"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/time_choice_button_radius"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="로그아웃"
                    android:textSize="14sp"
                    android:textColor="#343434"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:id="@+id/log_out_button_activity_account"></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginBottom="30dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#939393"
                    android:textSize="12sp"
                    android:text="회원탈퇴를 원하시면 "
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#939393"
                    android:textSize="12sp"
                    android:text="@string/here"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:id="@+id/here_text_view_activity_account"
                    android:includeFontPadding="false"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#939393"
                    android:textSize="12sp"
                    android:text="를 눌러 주세요."
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"></TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>