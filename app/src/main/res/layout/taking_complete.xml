<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="#ffffff"
    android:weightSum="360"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/taking_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="복용 완료"
        android:textSize="18sp"
        android:textColor="#2e2e2e"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="26dp"
        android:includeFontPadding="false"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right">
        <TextView
            android:id="@+id/count_taking_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_marginRight="12dp"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:background="@drawable/taking_complete_count"
            android:gravity="center"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanscjkkr_medium"></TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_marginRight="24dp"></ImageView>
    </LinearLayout>


</LinearLayout>