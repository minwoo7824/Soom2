<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".StaticFunc.Activitys.StaticSymptomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/txt_statics_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/back_btn_image"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:gravity="left|center_vertical"
            android:text="Back"
            android:textColor="#343434"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/txt_statics_breath_detail_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"
            android:textSize="20dp"
            android:textColor="#343434"
            android:text="폐기능 보고서"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/back_btn_image"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:gravity="left|center_vertical"
            android:text="Back"
            android:textColor="#343434"
            android:textSize="18sp"
            android:visibility="invisible"></TextView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lin_static_breath_data_exist"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="30dp"
                        android:id="@+id/lin_static_breath_background"
                        android:background="@drawable/static_breath_result_danger">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="40dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="양호"
                                android:textColor="#ffffff"
                                android:textSize="20dp"
                                android:id="@+id/txt_static_breath_detail_status"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="설명"
                                    android:textColor="#ffffff"
                                    android:textSize="14dp"
                                    android:id="@+id/txt_static_breath_detail_status_info"/>
                            </LinearLayout>
                        </LinearLayout>
    
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/radius_4dp"
                            android:backgroundTint="#f5f6fa">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="최소치"
                                    android:textSize="10dp"
                                    android:textColor="@color/black"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:id="@+id/txt_static_breath_detail_min_value"/>
                            </LinearLayout>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="33dp"
                                android:background="@color/black"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="최대치"
                                    android:textSize="10dp"
                                    android:textColor="@color/black"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:id="@+id/txt_static_breath_detail_max_value"/>
                            </LinearLayout>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="33dp"
                                android:background="@color/black"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="변동률"
                                    android:textSize="10dp"
                                    android:textColor="@color/black"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:id="@+id/txt_static_breath_detail_rate_value"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="기준"
                            android:textSize="14dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="*기준은 측정결과에 따라 달라집니다."
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textAlignment="viewEnd"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="위험"
                                android:textSize="16dp"
                                android:textColor="@color/statics_result_danger"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:background="@drawable/radius_4dp"
                                android:backgroundTint="@color/statics_result_danger"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="값"
                                android:textColor="@color/statics_result_danger"
                                android:textSize="14dp"
                                android:id="@+id/static_breath_result_dander_value_arrange"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="7dp"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="주의"
                                android:textSize="16dp"
                                android:textColor="@color/statics_result_warning"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:background="@drawable/radius_4dp"
                                android:backgroundTint="@color/statics_result_warning"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="값"
                                android:textColor="@color/statics_result_warning"
                                android:textSize="14dp"
                                android:id="@+id/static_breath_result_warning_value_arrange"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="7dp"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="양호"
                                android:textSize="16dp"
                                android:textColor="@color/statics_result_good"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:background="@drawable/radius_4dp"
                                android:backgroundTint="@color/statics_result_good"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="값"
                                android:textColor="@color/statics_result_good"
                                android:textSize="14dp"
                                android:id="@+id/static_breath_result_good_value_arrange"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lin_static_breath_data_non_exist"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/result_breath_data_none_title"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/result_breath_data_none"
                            android:textColor="@color/black"
                            android:textSize="14dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="0.6"
                            android:text="자세히 알아보기"
                            android:textColor="#ffffff"
                            android:backgroundTint="@color/colorPrimary"
                            android:background="@drawable/radius_4dp"
                            android:id="@+id/static_breath_result_detail_info"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체기록"
                    android:textColor="@color/black"
                    android:textSize="14dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="@drawable/symptom_cause_gradient"
                        android:weightSum="3"
                        android:gravity="center">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="측정값"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="14dp"
                            android:background="@drawable/symptom_result_border"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="흡입기"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="14dp"
                            android:background="@drawable/symptom_result_border"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="시간"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="14dp"
                            android:background="@drawable/symptom_result_border"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/lin_static_breath_result_history_list_parent">

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>