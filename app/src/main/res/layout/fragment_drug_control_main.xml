<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="616"
    tools:context="com.kmw.soom2.CommunityFragmentFunc.CommunityFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"
            android:text="약 관리"
            android:textColor="#000000"
            android:textSize="22sp"></TextView>

        <ImageView
            android:id="@+id/img_drug_control_alarm"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_alarm"/>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/drug_control_tab_layout_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabIndicatorColor="#33d16b"
            app:tabIndicatorHeight="2dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#000000"
            app:tabTextAppearance="@style/tab_text"
            app:tabTextColor="#5c5c5c"></com.google.android.material.tabs.TabLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="516">
        <com.kmw.soom2.Home.HomeItem.SwipeViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/view_pager_container_frag_drug_control_main">
        </com.kmw.soom2.Home.HomeItem.SwipeViewPager>
    </LinearLayout>
</LinearLayout>
